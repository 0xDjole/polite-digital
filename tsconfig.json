{
	"extends": "astro/tsconfigs/base",
	"compilerOptions": {
		"strictNullChecks": true,
		"allowJs": true,
		"forceConsistentCasingInFileNames": true,
		"baseUrl": ".",
		"paths": {
			"@config/*": [
				"src/config/*"
			],
			"@lib/*": [
				"src/lib/*"
			],
			"@layouts/*": [
				"src/layouts/*"
			],
			"@components/*": [
				"src/components/*"
			],
			"@assets/*": [
				"src/assets/*"
			],
			"@images/*": [
				"src/assets/images/*"
			],
			"@videos/*": [
				"src/assets/videos/*"
			],
			"@/*": [
				"src/*"
			]
		}
	}
}