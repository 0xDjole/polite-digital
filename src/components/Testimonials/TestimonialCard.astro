---
import { Image } from "astro:assets";
import { type TestimonialItem } from "@config/configDataTypes";
import { getImageUrl } from "@lib/index";

interface Props extends TestimonialItem {
	rest?: any;
}

const { avatar, name, title, quote, ...rest } = Astro.props as Props;
---

<div class="card-hover w-full md:min-w-[30%]" {...rest}>
	<div class="mr-auto flex items-center gap-6">
		<div class="h-12 w-12 shrink-0 overflow-hidden rounded-full">
			<Image
				referrerpolicy="no-referrer"
				src={getImageUrl(avatar)}
				alt={name}
				width={100}
				height={100}
				class="h-full object-cover"
			/>
		</div>
		<div>
			<h3 class="text-primary text-lg font-medium">{name}</h3>
			<p class="text-secondary text-sm">{title}</p>
		</div>
	</div>
	<p class="text-primary mt-4 text-sm lg:text-base">{quote}</p>
</div>
