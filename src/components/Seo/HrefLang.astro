---
import { defaultLocale, locales, getLocalizedPathname } from "@lib/i18n";

// utils
---

{
	locales.length > 1 &&
		locales.map((lang) => (
			<>
				<link
					rel="alternate"
					hreflang={lang}
					href={Astro.url.origin + getLocalizedPathname(lang, Astro.url)}
				/>
				{lang === defaultLocale && (
					<link
						rel="alternate"
						hreflang="x-default"
						href={Astro.url.origin + getLocalizedPathname(defaultLocale, Astro.url)}
					/>
				)}
			</>
		))
}
