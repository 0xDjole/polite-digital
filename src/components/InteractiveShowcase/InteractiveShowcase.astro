<style>
	/* Simple transitions for panels */
	.content-panel {
		transition: opacity 0.3s ease, visibility 0.3s ease;
	}

	/* Active card styling */
	[data-card].active {
		background-color: rgba(139, 92, 246, 0.1);
		border-color: rgba(139, 92, 246, 0.5);
	}
</style>

<script>
	// Simple panel switching
	function initShowcase() {
		const cards = document.querySelectorAll('[data-card]');
		const panels = document.querySelectorAll('[data-panel]');

		// Set first card as active
		if (cards.length > 0) {
			cards[0].classList.add('active');
		}

		cards.forEach((card) => {
			card.addEventListener('click', () => {
				const targetPanel = card.getAttribute('data-card');

				// Update active states
				cards.forEach(c => c.classList.remove('active'));
				card.classList.add('active');

				// Switch panels
				panels.forEach(panel => {
					if (panel.getAttribute('data-panel') === targetPanel) {
						panel.classList.remove('opacity-0', 'invisible');
						panel.classList.add('opacity-100', 'visible');
					} else {
						panel.classList.remove('opacity-100', 'visible');
						panel.classList.add('opacity-0', 'invisible');
					}
				});
			});
		});
	}

	document.addEventListener('DOMContentLoaded', initShowcase);
	document.addEventListener('astro:after-swap', initShowcase);
</script>