---
import MinimalLayout from "@layouts/MinimalLayout.astro";
import { defaultLocale, locales } from "@lib/i18n";
import "./guitar2.css";
import Background2 from "@assets/images/background2.jpg";
import HeroLayer1 from "@assets/images/hero-img-layer-1.jpg";
import HeroLayer2 from "@assets/images/hero-img-layer-2.png";
import Logo from "@assets/images/logo.png";
import { Image } from "astro:assets";

export function getStaticPaths() {
	return locales.map((locale) => ({
		params: {
			locale: locale === defaultLocale ? undefined : locale,
		},
		props: { locale },
	}));
}

const { locale = defaultLocale } = Astro.props;
---

<MinimalLayout title="Guitar Services" description="Professional guitar servicing and sales">
	<section class="hero">
		<div class="hero-img-container">
			<img src={HeroLayer1.src} alt="" />

			<div class="hero-img-logo">
				<img src={Logo.src} alt="" />
			</div>

			<img src={HeroLayer2.src} alt="" />

			<div class="hero-img-copy">
				<p>Scroll down to reveal</p>
			</div>
		</div>

		<div class="overlay">POPRAVKA</div>

		<div class="logo-container"></div>

		<div class="overlay-copy">
			<h1>
				Guitar <br />
				Excellence <br />
				Premium Care
			</h1>
		</div>
	</section>

	<div class="model"></div>

	<div class="container">
		<section class="hero-intro">
			<h1><span>Experience Excellence</span> in Guitar Care</h1>
		</section>

		<section class="sticky">
			<div class="bg-img"><img src={Background2.src} alt="Guitar workshop" /></div>

			<canvas class="outline-layer"></canvas>

			<div class="cards">
				<div class="card">
					<div class="card-img"><img src={Background2.src} alt="Guitar Repair" /></div>
					<div class="card-title">
						<h1>Professional Repair</h1>
						<p>SERV001</p>
					</div>
				</div>
				<div class="card">
					<div class="card-img"><img src={Background2.src} alt="Guitar Setup" /></div>
					<div class="card-title">
						<h1>Expert Setup</h1>
						<p>SERV002</p>
					</div>
				</div>
				<div class="card">
					<div class="card-img"><img src={Background2.src} alt="Custom Work" /></div>
					<div class="card-title">
						<h1>Custom Services</h1>
						<p>SERV003</p>
					</div>
				</div>
			</div>

			<canvas class="fill-layer"></canvas>
		</section>

		<section class="outro">
			<h1>Your guitar deserves <span>the best</span> care possible</h1>
		</section>
	</div>
</MinimalLayout>

<script type="module" src="./logo.js"></script>
<script src="./guitar2.ts"></script>
